{
  "name": "shopee-data-extractor",
  "displayName": "Shopee Data Extractor for SheetDB",
  "version": "1.0.0",
  "description": "Extract Shopee Seller Center campaign data and send to Google Sheets via SheetDB",
  "author": "Your Name",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*.shopee.co.id/*"
    ],
    "permissions": [
      "tabs",
      "cookies",
      "storage",
      "activeTab",
      "downloads"
    ]
  }
}
